{
  "expo": {
    "name": "Movimento SZ",
    "slug": "movimento-sz",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#180024"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "br.com.movimentosz",
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "requireFullScreen": true,
      "infoPlist": {
        "UIRequiresFullScreen": true,
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification"],
        "NSCameraUsageDescription": "Este app precisa acessar a câmera para fotos de perfil e funcionalidades de treino.",
        "NSPhotoLibraryUsageDescription": "Este app precisa acessar sua biblioteca de fotos para selecionar imagens de perfil.",
        "NSLocationWhenInUseUsageDescription": "Este app pode usar sua localização para funcionalidades futuras."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.movimento.sz",
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "domain": "movimentosz.com.br"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "owner": "deverv"
  }
}
